generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  bio               String?
  age               Int?
  gender            String?
  profilePictureUrl String?
  favoriteMovies    Movie[]
}

model Movie {
  id        String @id @default(cuid())
  tmdbId    Int    @unique // from The Movie Database API
  title     String
  posterPath String?
  likedBy   User[]
}