{
  "compilerOptions": {
    "target": "es2016", // compile to a modern js version
    "module": "commonjs", // use commonjs modules for node
    "rootDir": "./src", // where your ts files are
    "outDir": "./dist", // where compiled js files go
    "esModuleInterop": true, // helps with commonjs/es module compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true, // enables all strict type-checking options
    "skipLibCheck": true // skip type checking of declaration files
  },
  "include": ["src/**/*"] // which files to include
}
